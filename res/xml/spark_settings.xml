<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/app_name">
    
    <!-- Themes -->
    <Preference
        android:layout="@layout/cardview"
        android:summary="@string/theme_summary"
        android:key="themes_category"
        android:title="@string/themes_title"
        android:fragment="com.spark.settings.fragments.ThemeSettings"
        android:icon="@drawable/themes"/>

    
    <!-- Lock Screen -->
    <Preference
        android:layout="@layout/cardview"
        android:summary="@string/ui_summary"
        android:key="lockscreen_category"
        android:title="@string/lockscreen_title"
        android:fragment="com.spark.settings.fragments.LockScreenSettings"
        android:icon="@drawable/uituner"/>

    <!-- Status Bar -->
    <Preference
        android:layout="@layout/cardview"
        android:summary="@string/statusbar_summary"
        android:key="statusbar_category"
        android:title="@string/statusbar_title"
        android:fragment="com.spark.settings.fragments.StatusBarSettings"
        android:icon="@drawable/statusbar"/>

    <!-- Gesture -->
    <Preference
        android:layout="@layout/cardview"
        android:summary="@string/gesture_summary"
        android:key="gesture_category"
        android:title="@string/gesture_title"
        android:fragment="com.spark.settings.fragments.GestureSettings"
        android:icon="@drawable/gesture"/>

    <!-- QuickSettings -->
    <Preference
        android:layout="@layout/cardview"
        android:summary="@string/qs_summary"
        android:key="quicksettings_category"
        android:title="@string/quicksettings_title"
        android:fragment="com.spark.settings.fragments.QuickSettings"
        android:icon="@drawable/qspanel"/>

    <!-- Notification -->
    <Preference
        android:layout="@layout/cardview"
        android:summary="@string/notif_summary"
        android:key="notifications_category"
        android:title="@string/notifications_title"
        android:fragment="com.spark.settings.fragments.NotificationSettings"
        android:icon="@drawable/notif"/>

    <!-- Misc -->
    <Preference
        android:layout="@layout/cardview"
        android:summary="@string/misc_summary"
        android:key="misc_category"
        android:title="@string/misc_title"
        android:fragment="com.spark.settings.fragments.MiscSettings"
        android:icon="@drawable/extra"/>

    <!-- Power Menu -->
    <Preference
        android:layout="@layout/cardview"
        android:summary="@string/power_summary"
        android:key="power_category"
        android:title="@string/power_title"
        android:fragment="com.spark.settings.fragments.PowerSettings"
        android:icon="@drawable/power"/>

</PreferenceScreen>
